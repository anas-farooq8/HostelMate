<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/green"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="CREATE ISSUE"
            app:titleMarginStart="8dp"
            app:titleTextColor="@color/white">


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        android:text="@string/block_no"
        app:layout_constraintStart_toStartOf="@id/blockNo"
        android:id="@+id/text1"
        android:textColor="@color/green"
        android:textSize="17dp"/>

    <Spinner
        android:id="@+id/blockNo"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"

        android:background="@drawable/rounded_corner"
        android:hint="@string/block_a"
        android:paddingStart="10dp"
        android:textColor="@color/hint_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        tools:ignore="RtlSymmetry"
        tools:layout_editor_absoluteY="245dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        android:text="@string/room_no"
        app:layout_constraintStart_toStartOf="@id/RoomNo"
        android:id="@+id/text2"
        android:textColor="@color/green"
        android:textSize="17dp"/>

    <Spinner
        android:id="@+id/RoomNo"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/room_no_203"
        android:paddingStart="10dp"
        android:textColor="@color/hint_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@id/text2"
        tools:ignore="RtlSymmetry"
        tools:layout_editor_absoluteY="245dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="205dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/blockNo"
        android:text="@string/boldemail"
        app:layout_constraintStart_toStartOf="@id/Email"
        android:id="@+id/text3"
        android:textColor="@color/green"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_corner"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/text3"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/Email"
        android:text="@string/phno"
        app:layout_constraintStart_toStartOf="@id/Email"
        android:id="@+id/text4"
        android:textColor="@color/green"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/Phno"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_corner"
        android:hint="Enter Phone Number"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/text4"
        app:layout_constraintTop_toBottomOf="@id/text4"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/Phno"
        android:text="@string/problem"
        app:layout_constraintStart_toStartOf="@id/Email"
        android:textStyle="bold"
        android:inputType="text"
        android:id="@+id/text5"
        android:textColor="@color/green"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/Problem"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_corner"
        android:hint="Enter Your Reason"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/text5"
        app:layout_constraintTop_toBottomOf="@id/text5"
        android:textSize="20sp" />

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/filled_rounded_corner"
        android:text="SUBMIT"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/Problem"
        android:textSize="20sp" />




</androidx.constraintlayout.widget.ConstraintLayout>
