<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/green"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Notification"
            app:titleMarginStart="8dp"
            app:titleTextColor="@color/white">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="FEES DUE AT 28th March"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:elevation="20dp"
        android:paddingEnd="20dp"
        android:drawableEnd="@drawable/close"
        android:background="@drawable/white_filled_rounded_corners"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/t1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Itâ€™s past 12 am are you in Hostel?"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:elevation="20dp"
        android:paddingEnd="20dp"
        android:drawableEnd="@drawable/close"
        android:background="@drawable/white_filled_rounded_corners"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/t2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Cafe menu for this week has been posted"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:elevation="20dp"
        android:paddingEnd="20dp"
        android:drawableEnd="@drawable/close"
        android:background="@drawable/white_filled_rounded_corners"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/t3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Your room was cleaned around 2pm."
        android:textSize="14sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:elevation="20dp"
        android:paddingEnd="20dp"
        android:drawableEnd="@drawable/close"
        android:background="@drawable/white_filled_rounded_corners"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>